block header
    .container.bg-light
        h1 List Users
        .row
            .col.col-sm
                a(href="/users").text-light.btn.btn-primary  Back to users List
            .col.col-sm
                a(href="/users/create").text-light.btn.btn-danger Create new user
        .row.pt-5.mt-5
