        table.table.container.table-responsive-sm.table-hover
            thead.thead-light
                tr
                    th ID
                    th Name
                    th View
                    th Edit
                    th Delete
            each user2 in users
                tr         
                    td #{user2.id}
                    td #{user2.name}
                    td
                        a(href="/users/view/"+user2.id).text-light.btn.btn-primary View user
                    td
                        a(href="/users//edit/"+user2.id).text-light.btn.btn-warning Edit user
                    td
                        a(href="/users/delete/"+user2.id).text-light.btn.btn-danger Delete user